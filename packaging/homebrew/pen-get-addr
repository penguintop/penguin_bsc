#!/bin/sh

RESP=$(/usr/local/bin/pen init --config /usr/local/etc/penguin-bsc/pen.yaml 2>&1)
case "$RESP" in
    Error*)
        echo "
Enabled clef-signer but clef is not running.
After you fix configuration run 'pen-get-addr' again.
        "
        ;;
    *)
        ETH_ADDRESS=$(echo "$RESP" | grep ethereum | cut -d' ' -f6 | tr -d '"')
        echo "
Please make sure there is sufficient bsc and pen available on $ETH_ADDRESS address.
Learn how to fund your node by visiting our docs

After you get the funds start service with 'brew services start penguin-bsc'.
        "
        ;;
esac
